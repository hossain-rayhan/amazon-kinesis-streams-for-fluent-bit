terminal-1: run fluent-bit-for-kinesis image
docker build -t kinesis .
docker run --rm -v $(pwd):/fluent-bit/etc/ -v $HOME:/home -e "HOME=/home" -e="FLB_LOG_LEVEL=debug" -p 24224:24224 kinesis:latest

terminal-2: run docker image with c program
docker build -t c-docker-app .
docker run --rm --log-driver=fluentd --name=my-c-docker-app c-docker-app